<block render="form">
    <meta model="base.user" displayName="${noix.login.login}"/>
    <block render="layout">
        <meta col="2"/>
        <block render="layout-item">
            <meta col="2"/>
            <block render="form-item">
                <meta type="field" displayName="${noix.login.username}"/>
                <field name="username"/>
            </block>
        </block>
        <block render="layout-item">
            <meta col="2"/>
            <block render="form-item">
                <meta type="field" displayName="${noix.login.password}"/>
                <field name="password"/>
            </block>
        </block>
        <block render="layout-item">
            <meta col="1"/>
            <block render="button">
                <meta type="action"/>
                <action type="compose">
                    <meta displayName="${noix.login.login}" />
                    <action name="validate"/>
                    <action name="submit"/>
                    <action name="back"/>
                </action>
            </block>
        </block>
        <block render="layout-item">
            <meta col="1"/>
            <block render="button">
                <action name="register">
                    <meta displayName="${noix.login.register}"/>
                </action>
            </block>
        </block>
    </block>
</block>